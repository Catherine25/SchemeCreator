<Window x:Class="SchemeSimulator.NewGateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchemeSimulator"
        mc:Ignorable="d"
        Title="Choose new gate" Height="450" Width="800">
    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <ComboBox x:Name="ItemsList" SelectedItem="In" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.ColumnSpan="2">
            <ComboBoxItem>In</ComboBoxItem>
            <ComboBoxItem>Out</ComboBoxItem>
            <ComboBoxItem>And</ComboBoxItem>
            <ComboBoxItem>Nand</ComboBoxItem>
            <ComboBoxItem>Or</ComboBoxItem>
            <ComboBoxItem>Nor</ComboBoxItem>
            <ComboBoxItem>Xor</ComboBoxItem>
            <ComboBoxItem>Xnor</ComboBoxItem>
        </ComboBox>
        
        <Button x:Name="OkBt" Content="Ok" Grid.Row="2"/>
        <Button x:Name="CloseBt" Content="Close" Grid.Row="2" Grid.Column="1"/>
    </Grid>
</Window>
