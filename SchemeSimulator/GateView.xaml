<UserControl x:Class="SchemeSimulator.GateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchemeSimulator"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid Width="100" Height="100">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="Rectangle" Background="#222222" Foreground="#aaaaaa" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0" Grid.Column="1"/>
        </Grid>

        <Grid x:Name="Ports">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="Inputs">
                <!-- <Ellipse Fill="#aaaaaa" Width="15" Height="15"></Ellipse> -->
            </Grid>
            <Grid x:Name="Outputs" Grid.Column="2"></Grid>
        </Grid>
    </Grid>
</UserControl>
